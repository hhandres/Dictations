<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level4_melody_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andresmusicproductions.android.dictations.Level4Melody">

    <TextView
        android:id="@+id/l4mTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Level 4 Melodic Dictations"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/l4mScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/l4m1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="1. 3/4 Major: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="2. 6/8 Major: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="3. 4/4 Major: Contains raised scale degree 4 and lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="4. 3/4 Major: Contains raised scale degree 1 and lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="5. 6/8 Major: Contains raised scale degrees 4 and 5. Contains lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="6. 4/4 Major: Contains raised scale degrees 2, 4 and 5. Contains lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="7. 9/8 Major: Contains raised scale degrees 4 and 5" />

            <Switch
                android:id="@+id/l4m8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="8. 3/4 Major: Contains lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="9. 4/4 Major: Contains raised scale degrees 1, 4 and 5" />

            <Switch
                android:id="@+id/l4m10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="10. 6/8 Major: Contains raised scale degrees 1 and 2" />

            <Switch
                android:id="@+id/l4m11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="11. 3/4 Minor: Contains raised scale degree 4" />

            <Switch
                android:id="@+id/l4m12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="12. 6/8 Minor: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="13. 4/4 Major: Contains raised scale degree 4 and lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="14. 3/4 Major: Contains raised scale degrees 2 and 4" />

            <Switch
                android:id="@+id/l4m15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="15. 6/8 Minor: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="16. 2/4 Major: Contains raised scale degrees 1 and 5. Contains lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="17. 6/8 Minor: No altered scale degrees other than raised 6 and 7 for minor" />

            <Switch
                android:id="@+id/l4m18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="18. 3/4 Minor: Contains raised scale degree 4" />

            <Switch
                android:id="@+id/l4m19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="19. 4/4 Major: Contains raised scale degrees 1 and 4. Contains lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="20. 6/8 Minor: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="21. 4/4 Major: Contains raised scale degrees 2 and 4. Contains lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="22. 3/4 Minor: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="23. 9/8 Minor: Contains raised scale degree 4" />

            <Switch
                android:id="@+id/l4m24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="24. 6/8 Major: Contains raised scale degree 4" />

            <Switch
                android:id="@+id/l4m25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="25. 2/4 Major: Contains raised scale degree 1 and lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="26. 3/4 Minor: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="27. 6/8 Major: Contains raised scale degrees 1, 2, and 4. Contains lowered scale degree 7" />

            <Switch
                android:id="@+id/l4m28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="28. 4/4 Major: Contains raised scale degree 4 and lowered scale degree 6" />

            <Switch
                android:id="@+id/l4m29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="29. 3/4 Minor: Contains raised scale degrees 1 and 4" />

            <Switch
                android:id="@+id/l4m30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="30. 6/8 Minor: Contains raised scale degree 1 and lowered scale degree 2" />

            <Switch
                android:id="@+id/l4m31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="31. 4/4 Major: Contains raised scale degrees 2 and 4. Contains lowered scale degrees 2, 6, and 7" />

            <Switch
                android:id="@+id/l4m32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="32. 3/4 Major: Contains raised scale degrees 2 and 4. Contains lowered scale degrees 2 and 6" />

            <Switch
                android:id="@+id/l4m33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="33. 6/8 Minor: Contains raised scale degree 4 and lowered scale degree 2" />

            <Switch
                android:id="@+id/l4m34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="34. 6/8 Major: Contains raised scale degrees 4 and 5. Contains lowered scale degrees 2 and 6" />

            <Switch
                android:id="@+id/l4m35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="35. 2/4 Major: Contains raised scale degree 2. Contains lowered scale degrees 2 and 6" />

            <Switch
                android:id="@+id/l4m36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="36. 6/8 Minor: Contains raised scale degree 4 and lowered scale degree 2" />

            <Switch
                android:id="@+id/l4m37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="37. 4/4 Major: Contains raised scale degree 2. Contains lowered scale degrees 2, 6 and 7" />

            <Switch
                android:id="@+id/l4m38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="38. 3/4 Minor: Contains lowered scale degree 2" />

            <Switch
                android:id="@+id/l4m39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="39. 5/8 Minor: Alternating 3 + 2 with 2 + 3 patterns. Outlines Tonic and Subdominant Triads and the Dominant 7th Chord" />

            <Switch
                android:id="@+id/l4m40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="40. 7/8 Major: Consistent 3 + 2 + 2 pattern. No distinct chord outlining. Contains quarter and eighth notes" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
