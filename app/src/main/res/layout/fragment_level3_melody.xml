            <Switch
                android:id="@+id/l3m26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="26. 3/4 Major: Contains raised scale degrees 2 and 4. Contains lowered scale degree 7" />

            <Switch
                android:id="@+id/l3m27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="27. 6/8 Major: Contains raised scale degrees 1 and 4. Contains lowered scale degree 7" />

            <Switch
                android:id="@+id/l3m28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="28. 4/4 Major: Contains raised scale degree 1. Contains lowered scale degree 7" />

            <Switch
                android:id="@+id/l3m29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="29. 2/4 Major: Contains raised scale degree 2. Contains lowered scale degree 7" />

            <Switch
                android:id="@+id/l3m30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="30. 3/4 Major: Contains raised scale degrees 1 and 5. Contains lowered scale degree 7" />

            <Switch
                android:id="@+id/l3m31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="31. 4/4 Major: Outlines Dominant 9th Chord" />

            <Switch
                android:id="@+id/l3m32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="32. 4/4 Major: Outlines Dominant 9th Chord" />

            <Switch
                android:id="@+id/l3m33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="33. 3/4 Minor: Outlines Dominant 9th Chord" />

            <Switch
                android:id="@+id/l3m34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="34. 6/8 Major: Contains raised scale degrees 2 and 4. Outlines Dominant 9th Chord" />

            <Switch
                android:id="@+id/l3m35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dictationChosen"
                android:padding="10dp"
                android:text="35. 9/8 Major: Contains raised scale degrees 1 and 6. Contains lowered scale degree 7. Outlines Dominant 9th Chord" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
